          <span className="status-text" style={{ fontSize: '13px', color: isDarkMode ? '#ccc' : '#666' }}>
            {apiStatus?.status === 'online' ? 'API Connected' : 
             apiStatus?.status === 'degraded' ? 'Limited Connectivity' : 
             'API Offline'}
